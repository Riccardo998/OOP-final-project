<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/yellow">
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sport"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            card_view:cardCornerRadius="16dp">

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
-->
                <ImageView
                    android:id="@+id/img_sport"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/img_workout"
                    android:background="@color/Tomato"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@id/img_sport"
                    android:layout_alignTop="@id/img_sport"
                    android:layout_alignRight="@id/img_sport"
                    android:layout_alignBottom="@id/img_sport"
                    android:layout_margin="8dp"
                    android:gravity="left"
                    android:textSize="24dp"
                    android:text="Sport"
                    android:textColor="#000000"/>

            <!--</LinearLayout>-->
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/studio"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            card_view:cardCornerRadius="16dp">

            <ImageView
                android:id="@+id/img_study"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/img_study"
                android:background="@color/Tomato"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignLeft="@id/img_study"
                android:layout_alignTop="@id/img_study"
                android:layout_alignRight="@id/img_study"
                android:layout_alignBottom="@id/img_study"
                android:layout_margin="8dp"
                android:textSize="24dp"
                android:gravity="left"
                android:text="Studio"
                android:textColor="#000000"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/lavoro"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            card_view:cardCornerRadius="16dp">

            <ImageView
                android:id="@+id/img_work"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/img_work"
                android:background="@color/Tomato"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignLeft="@id/img_work"
                android:layout_alignTop="@id/img_work"
                android:layout_alignRight="@id/img_work"
                android:layout_alignBottom="@id/img_work"
                android:layout_margin="8dp"
                android:textSize="24dp"
                android:gravity="left"
                android:text="Lavoro"
                android:textColor="#000000"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/freetime"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="3dp" >

            <ImageView
                android:id="@+id/img_freetime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/img_freetime"
                android:background="@color/Tomato"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignLeft="@id/img_freetime"
                android:layout_alignTop="@id/img_freetime"
                android:layout_alignRight="@id/img_freetime"
                android:layout_alignBottom="@id/img_freetime"
                android:layout_margin="8dp"
                android:textSize="24dp"
                android:gravity="left"
                android:text="Tempo libero"
                android:textColor="#000000"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>